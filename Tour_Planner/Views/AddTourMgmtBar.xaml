<UserControl x:Class="Tour_Planner.Views.AddTourMgmtBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tour_Planner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <Rectangle HorizontalAlignment="Left" Height="30" Fill="PaleTurquoise" VerticalAlignment="Center" Width="71" Grid.Column="0"/>
        <TextBlock HorizontalAlignment="Left" Margin="21,0,0,0" TextWrapping="Wrap" Text="Tours" VerticalAlignment="Center" Grid.Column="0"/>
        <Button Height="30" Content="+" Grid.Column="2" MinWidth="25"/>
        <Button Height="30" Content="-" Grid.Column="3" MinWidth="25"/>
        <Button Height="30" Content="..." Grid.Column="4" MinWidth="25"/>
    </Grid>
</UserControl>
