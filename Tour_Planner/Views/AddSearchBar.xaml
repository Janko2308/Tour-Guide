<UserControl x:Class="Tour_Planner.Views.AddSearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tour_Planner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Path=SearchText}" Height="25" VerticalAlignment="Top" Grid.Column="0" MinWidth="1920"/>
        <Button Command="{Binding Path=SearchCommand}" Height="25" Content="Search" Grid.Column="1"/>
        <!--Search icon -->
    </Grid>

</UserControl>
