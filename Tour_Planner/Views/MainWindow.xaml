<Window x:Class="Tour_Planner.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tour_Planner.Views"
        mc:Ignorable="d"
        Title="Tour Planner" Height="450" Width="800">
   
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Border
               BorderThickness="5"  
               BorderBrush="Green"  
               CornerRadius="10"  
               Background="LightGray"  
               HorizontalAlignment="Left"  
               VerticalAlignment="Top"  
               />
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header=""/>
                    <MenuItem Header=""/>
                    <MenuItem Header=""/>
                </MenuItem>
                <MenuItem Header="Edit"/>
                <MenuItem Header="Options"/>
                <MenuItem Header="Help" />
            </Menu>
            <local:AddSearchBar x:Name="AddSearchBar"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <local:AddTourMgmtBar x:Name="AddTourMgmtBar" />
            <!-- <local:AddTourMenu x:Name="AddTourMenu" /> -->
        </DockPanel>
        <Grid/>

        <DockPanel DockPanel.Dock="Left">
            <ListView ItemsSource="{Binding Path=Tours}">
                
            </ListView>
        </DockPanel>
    </DockPanel>
</Window>
