<UserControl x:Class="Tour_Planner.Views.AddSearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tour_Planner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">
    <Grid>
        <DockPanel DockPanel.Dock="Top">
            <Button Command="{Binding Path = SearchCommand}" Height="25" DockPanel.Dock="Right" Content="Search"/>
            <TextBox Text="{Binding Path = SearchText}" Height="25" Width="800" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <!--Search icon -->

        </DockPanel>
    </Grid>
</UserControl>
